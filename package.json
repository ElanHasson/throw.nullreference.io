{
  "name": "throw-nullreference-io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "export": "next build",
    "check-all": "yarn typecheck && yarn lint && yarn format:check && yarn test",
    "check-links": "remark app/**/*.mdx --use remark-validate-links --frail",
    "check-links:site": "linkinator out --recurse --silent",
    "check-links:site:verbose": "linkinator out --recurse",
    "check-links:ci": "yarn build && yarn check-links:site",
    "test:e2e": "yarn test:e2e:static && yarn test:e2e:dev",
    "test:e2e:static": "playwright test --config=playwright.config.static.ts",
    "test:e2e:dev": "playwright test --config=playwright.config.dev.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ui:static": "playwright test --config=playwright.config.static.ts --ui",
    "test:e2e:ui:dev": "playwright test --config=playwright.config.dev.ts --ui"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=22.14.0 < 23.0.0"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.5",
    "@types/mdx": "^2.0.13",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.536.0",
    "mermaid": "^11.9.0",
    "next": "^15.4.5",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.21",
    "axe-playwright": "^2.1.0",
    "eslint": "^9",
    "eslint-config-next": "^15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.6.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "linkinator": "^6.1.4",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "remark-cli": "^12.0.1",
    "remark-validate-links": "^13.1.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
